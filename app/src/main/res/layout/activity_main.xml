<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/a03"


    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/textLocationId"
        android:text="Location Updates : 122.3333    96.85973"
        android:textColor="@color/self_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/addressid"
        android:text="Address :"
        android:textColor="@color/self_color"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Scan"
        android:background="@drawable/custom_button"
        android:id="@+id/getLocation"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Latitude :"
                android:textColor="@color/self_color"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/textViewId1"
                android:textColor="@color/self_color"
                android:text="122.568742"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Longitude :"
                android:textColor="@color/self_color"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/textViewId2"
                android:textColor="@color/self_color"
                android:text="80.325689"
                />


        </LinearLayout>



    </LinearLayout>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Place Name"
        android:textColorHint="@color/self_color"
        android:textColor="@color/self_color"
        android:id="@+id/placeNameId"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="Save Location"

                android:background="@drawable/custom_button"
                android:id="@+id/saveLocationid"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="Saved Locations"
                android:background="@drawable/custom_button"
                android:id="@+id/savedLocationsId"
                />

            <Button
                android:id="@+id/button1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:layout_below="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:text="silent" />

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:id="@+id/startserviceid"
                android:text="startservice"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/button1"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:text="vibrate" />

            <Button
                android:id="@+id/button3"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/button2"
                android:layout_below="@+id/button2"
                android:background="@drawable/custom_button"
                android:layout_marginTop="15dp"
                android:text="ringer" />
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:text="Logout"
                android:id="@+id/logoutid"
                android:background="@drawable/custom_button"

                />
            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_button"
                android:id="@+id/stopserviceid"
                android:text="stopservice"
                />

        </LinearLayout>


    </LinearLayout>




</LinearLayout>